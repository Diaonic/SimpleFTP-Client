<Window x:Class="SimpleFTP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleFTP"
        mc:Ignorable="d"
        Title="MainWindow" Height="381.142" Width="716.596">
    <Grid>
        <TextBox x:Name="txt_server" HorizontalAlignment="Left" Height="23" Margin="10,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" Text="speedtest.tele2.net/"/>
        <TextBox x:Name="txt_port" HorizontalAlignment="Left" Height="23" Margin="181,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="38"/>
        <Button x:Name="Btn_connect" Content="Connect" HorizontalAlignment="Left" Margin="93,186,0,0" VerticalAlignment="Top" Width="75" Click="Btn_connect_Click"/>
        <Rectangle Fill="#FFCFCFD6" HorizontalAlignment="Left" Height="308" Margin="224,42,0,0" Stroke="Black" VerticalAlignment="Top" Width="485"/>
        <TextBox x:Name="txt_user" HorizontalAlignment="Left" Height="23" Margin="10,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
        <TextBox x:Name="txt_pass" HorizontalAlignment="Left" Height="23" Margin="10,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
        <TextBlock x:Name="txt_block" HorizontalAlignment="Left" Margin="234,0,0,21" TextWrapping="Wrap" VerticalAlignment="Bottom" Height="271" Width="465" Cursor="ScrollNS"/>
        <Button x:Name="Btn_clear" Content="clear" HorizontalAlignment="Left" Margin="93,245,0,0" VerticalAlignment="Top" Width="75" Click="Btn_clear_Click"/>

    </Grid>
</Window>
